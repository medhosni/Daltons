<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gen.souhaikr.daltons"

    android:compileSdkVersion="28"
    android:compileSdkVersionCodename="9"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"

        android:icon="@drawable/logo"
        android:label="Daltons"
        android:largeHeap="true"
        android:roundIcon="res/mipmap-xxxhdpi-v4/ic_launcher_round.png"
        android:supportsRtl="true">
        <activity android:name="com.gen.souhaikr.daltons.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.gen.souhaikr.daltons.HomeActivity" />
        <activity android:name="com.gen.souhaikr.daltons.MainActivity" />
        <activity android:name="com.gen.souhaikr.daltons.CameraActivity" />
        <activity android:name="com.gen.souhaikr.daltons.FilterActivity" />
        <activity android:name="com.gen.souhaikr.daltons.SecondTestActivity" />
        <activity android:name="com.gen.souhaikr.daltons.slide.SlideActivity" />
        <activity android:name="com.gen.souhaikr.daltons.ResultActivity" />
        <activity android:name="com.gen.souhaikr.daltons.TestActivity" />
        <activity android:name="com.facebook.FacebookActivity" />
        <activity android:name="com.facebook.CustomTabMainActivity" />
        <activity android:name="com.facebook.CustomTabActivity" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.gen.souhaikr.daltons.com.squareup.picasso"
            android:exported="false" />
        <provider
            android:name="com.facebook.marketing.internal.MarketingInitProvider"
            android:authorities="com.gen.souhaikr.daltons.MarketingInitProvider"
            android:exported="false" />
        <provider
            android:name="com.facebook.internal.FacebookInitProvider"
            android:authorities="com.gen.souhaikr.daltons.FacebookInitProvider"
            android:exported="false" />


    </application>
</manifest>
